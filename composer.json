{
  "$schema": "https://getcomposer.org/schema.json",
  "name": "kalimeromk/slim-mvc-starter",
  "description": "A production-ready Slim 4 MVC Starter Kit with Eloquent ORM, database migrations, JWT authentication, role-based permissions, and modular architecture",
  "license": "MIT",
  "keywords": [
    "slim",
    "slim4",
    "mvc",
    "starter",
    "kit",
    "eloquent",
    "views",
    "migrations",
    "php",
    "framework"
  ],
  "authors": [
    {
      "name": "Zoran Shefot Bogoevski",
      "email": "zbogoevski@gmail.com"
    }
  ],
  "type": "project",
  "require": {
    "php": ">=8.3",
    "ext-fileinfo": "*",
    "illuminate/config": "^v12.3.0",
    "illuminate/database": "^12.0",
    "illuminate/pagination": "^12.38",
    "illuminate/support": "^12.26",
    "illuminate/translation": "^12.7",
    "illuminate/validation": "^12.7",
    "illuminate/view": "^12.0",
    "monolog/monolog": "^3.0",
    "php-di/slim-bridge": "^3.4",
    "phpmailer/phpmailer": "^6.9",
    "predis/predis": "^3.2",
    "slim/csrf": "^1.5",
    "slim/http": "^1.3",
    "slim/psr7": "^1.5",
    "slim/slim": "^4.0",
    "symfony/console": "^6.0",
    "tuupola/cors-middleware": "^1.4",
    "vlucas/phpdotenv": "^5.6"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "App\\View\\": "app/View/",
      "Database\\Migrations\\": "database/migrations/",
      "Database\\Seed\\": "database/seed/"
    },
    "files": [
      "app/Modules/Core/Infrastructure/View/BladeViewHelper.php",
      "app/Modules/Core/Infrastructure/View/BladeAssetHelper.php",
      "app/Modules/Core/Infrastructure/Support/helper.php"
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "require-dev": {
    "fakerphp/faker": "^1.24",
    "laravel/pint": "^1.21",
    "phpunit/phpunit": "^12.4",
    "rector/rector": "^2.0.19"
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit"
  }
}
